<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.greenhi.peachland.mapper.PoetryMapper">

    <resultMap id="poetryMapBase" type="com.greenhi.peachland.item.ItemPoetryBase">
        <id column="id" property="id"/>
        <result column="author" property="author"/>
        <result column="content" property="content"/>
        <result column="notes" property="notes"/>
    </resultMap>

    <resultMap id="poetryMapTrans" type="com.greenhi.peachland.item.ItemPoetryTrans">
        <id column="id" property="id"/>
        <result column="English_translation" property="english"/>
        <result column="French_translation" property="french"/>
        <result column="Russian_translation" property="russian"/>
        <result column="Japanese_translation" property="japanese"/>
        <result column="Korean_translation" property="korean"/>
    </resultMap>

    <resultMap id="poetryMapCount" type="com.greenhi.peachland.item.ItemPoetryCount">
        <result column="group_" property="group"/>
        <result column="count_" property="count"/>
    </resultMap>

    <select id="selectByTitleBase" resultMap="poetryMapBase">
        select id,author,content,notes
        from poetry
        where title=#{title}
    </select>

    <select id="selectTitleByAuthor" resultType="java.lang.String">
        select title
        from poetry
        where author=#{author}
    </select>

    <select id="selectTitleByTheme" resultType="java.lang.String">
        select title
        from poetry
        where theme like #{theme}
    </select>

    <select id="selectTitleByDiff" resultType="java.lang.String">
        select title
        from poetry
        where difficulty=#{diff}
    </select>

    <select id="selectTitleByDynasty" resultType="java.lang.String">
        select title
        from poetry
        where dynasty=#{dynasty}
    </select>

    <select id="getTransByTitle" resultMap="poetryMapTrans">
        select id,English_translation,French_translation,Russian_translation,Japanese_translation,Korean_translation
        from poetry
        where title=#{title}
    </select>

    <select id="countByGroup" resultMap="poetryMapCount">
        select ${group} group_,count(${group}) count_
        from poetry
        group by ${group}
    </select>
    <!-- ${key}表示获取参数，先获取参数的值拼接到SQL语句中，再编译执行SQL语句，可能引起SQL注入问题 SQL拼接 -->
    <!-- #{key}表示获取参数，先完成SQL语句编译（预编译），之后再将获取的参数设置到SQL语句中,可以避免SQL注入问题 SQL预编译 -->
    <!-- parameterType用于指定参数类型（当参数是String类型时） -->
</mapper>
